import org.openqa.selenium.*;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;
public class WebDriverExample {
    public static void main(String[] args) {
        // Set the path to your ChromeDriver executable
        System.setProperty("webdriver.chrome.driver");
        // Initialize the WebDriver instance
        WebDriver driver = new ChromeDriver();
        try {
            // Navigate to the specified URL
            driver.get("https://api.jquery.com/dblclick/");
            // Locate the blue square element at the bottom of the page
            WebElement blueSquare = driver.findElement(By.cssSelector(".dbl"));
            // Double click on the blue square
            Actions actions = new Actions(driver);
            actions.doubleClick(blueSquare).perform();
            // Find and write the changed color
            WebElement changedColorSquare = driver.findElement(By.cssSelector(".dbl[style*='rgb']"));
            String changedColor = changedColorSquare.getCssValue("background-color");
            System.out.println("Changed color: " + changedColor);
            // Scroll to the top of the page
            ((JavascriptExecutor) driver).executeScript("window.scrollTo(0, 0)");
            // Find the text input field and send keys using JavascriptExecutor
            WebElement inputField = driver.findElement(By.name("s"));
            ((JavascriptExecutor) driver).executeScript("arguments[0].value = 'Thanks to JavascriptExecutor';", inputField);
            // Scroll to the bottom of the page
            ((JavascriptExecutor) driver).executeScript("window.scrollTo(0, document.body.scrollHeight)");
            // Find and click the book named "jQuery in Action"
            WebElement book = driver.findElement(By.xpath("//img[@alt='jQuery in Action']"));
            book.click();
            // Wait for a few seconds to see the results
            Thread.sleep(3000);
        } catch (InterruptedException e) {
            e.printStackTrace();
        } finally {
            // Close the browser window
            driver.quit();
        }
    }
}
